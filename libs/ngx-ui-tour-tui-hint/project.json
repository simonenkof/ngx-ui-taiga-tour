{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "ngx-taiga-tour",
  "projectType": "library",
  "tags": ["libs"],
  "sourceRoot": "libs/ngx-ui-tour-tui-hint/src",
  "prefix": "lib",
  "targets": {
    "prebuild": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/ngx-ui-tour-tui-hint"],
      "options": {
        "project": "libs/ngx-ui-tour-tui-hint/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ngx-ui-tour-tui-hint/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/ngx-ui-tour-tui-hint/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/ngx-ui-tour-tui-hint"],
      "options": {
        "parallel": false,
        "commands": ["nx prebuild {projectName}"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["libs/ngx-ui-tour-tui-hint/src/**/*.ts", "libs/ngx-ui-tour-tui-hint/src/**/*.html"],
        "eslintConfig": "libs/ngx-ui-tour-tui-hint/eslint.config.cjs"
      },
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish ./dist/{projectName} --ignore-scripts || echo \"already published\""
      },
      "dependsOn": [
        {
          "target": "build",
          "params": "ignore"
        }
      ]
    }
  }
}
